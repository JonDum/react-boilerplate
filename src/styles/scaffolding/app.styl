
html, body, app
	width 100%
	height 100%
	background $backgroundColor
	overflow hidden

app
	layout horizontal stretch
	height 100%

.auth
	layout vertical middle center
	width 100%
	button
		font-weight bold
	img
		max-width $xl
		vertical-align middle

.map
	width 100%
	height 100%
	outline none
	flex 1
	*
		outline none



.entities ul > li, .route .stop
	.details > div
		max-width 220px
		text-overflow ellipsis
		overflow hidden


